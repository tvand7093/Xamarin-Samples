<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 	
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:ctrls="clr-namespace:FormsCustomControls.Controls;assembly=FormsCustomControls"
	xmlns:vms="clr-namespace:FormsCustomControls.ViewModels;assembly=FormsCustomControls"
	Title="Custom Control Tests"
	x:Class="FormsCustomControls.Pages.MainPage">
	<ContentPage.BindingContext>
		<vms:TestViewModel />
	</ContentPage.BindingContext>
	<ContentPage.Content>
		<StackLayout Padding="10" HorizontalOptions="FillAndExpand">
			<ctrls:CustomHeaderBox LeftTitle="{Binding Left}" RightTitle="{Binding Right}"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>